<div class="container d-flex flex-column align-items-center justify-content-center p-2">
  <div class="row p-2">
      <h1>Guess that Word Game!</h1>
  </div>

  <div class="row p-2">
    <h2>
      <div class="justify-content-around p-2">
      <% @letters.each do |letter| %>
          <span class="border border-primary rounded p-1"><%= letter[0] %></span>
        <% end %>
      </div>
    </h2>
  </div>

  <div class="row p-2">
    <form action="/score" method="POST" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
    <div class="input-group">
      <input type="text" name="word" class="form-control">
      <input type="submit" class="btn btn-primary" value="Enter">
    </div>
    </form>
  </div>

  <div class="row pt-2">
    <p class="form-prefix">What is the longest word you can find?</p>
  </div>

</div>
